<?xml version="1.0"?>
<sdf version="1.4">
  <world name="default">

    <!-- Setting camera -->
    <gui>
        <camera name="user_camera">
            <!-- <pose> 80 -45 70 0 0.768 2.6</pose> -->
            <pose> 15.85 14.64 18.01 0 1.09 -1.302 </pose>
        </camera>
    </gui>

    <include>
      <uri>model://ground_plane</uri>
    </include>

    <include>
      <uri>model://sun</uri>
    </include>

    <!-- Hospital map -->
    <model name="my_mesh">
      <pose>0 0 0  0 0 0</pose>
      <static>true</static>
      <link name="body">
        <visual name="visual">
          <geometry>
            <mesh><uri>file://workdir/map/hospital_floors.dae</uri></mesh>
          </geometry>
        </visual>
        <collision name="collision">
          <geometry>
            <mesh><uri>file://workdir/map/hospital_floors.dae</uri></mesh>
          </geometry>
        </collision>
      </link>
    </model>

    <!-- Elevator -->

    <model name="elevator">
      <pose>17.7 9.3 0.01 0 0 0</pose>
      <link name="link">
        <inertial>
          <mass>800</mass>
        </inertial>

        <collision name="floor_collision">
          <geometry>
            <box>
              <size>6.5 6.6 0.01</size>
            </box>
          </geometry>
        </collision>
        <visual name="floor_visual">
          <geometry>
            <box>
              <size>6.5 6.6 0.01</size>
            </box>
          </geometry>
        </visual>

        <!-- wall1_collision is the wall to the right of the door, when
             facing the door -->
        <collision name="wall1_collision">
          <pose>1.7 -3.2 1.125 0 0 0</pose>
          <geometry>
            <box>
              <size>3 0.1 2.25</size>
            </box>
          </geometry>
        </collision>
        <visual name="wall1_visual">
          <pose>1.7 -3.2 1.125 0 0 0</pose>
          <geometry>
            <box>
              <size>3 0.1 2.25</size>
            </box>
          </geometry>
          <material>
            <script>
              <name>Gazebo/Red</name>
            </script>
          </material>
        </visual>

        <!-- wall2_collision is the wall to the left of the door, when
             facing the door -->
        <collision name="wall2_collision">
          <pose>-3.0 -3.2 1.125 0 0 0</pose>
          <geometry>
            <box>
              <size>0.5 0.1 2.25</size>
            </box>
          </geometry>
        </collision>
        <visual name="wall2_visual">
          <pose>-3.0 -3.2 1.125 0 0 0</pose>
          <geometry>
            <box>
              <size>0.5 0.1 2.25</size>
            </box>
          </geometry>
          <material>
            <script>
              <name>Gazebo/Red</name>
            </script>
          </material>
        </visual>
      </link>

      <link name="door">
        <pose>-1.3 -3.2 1.125 0 0 0</pose>
        <!-- <collision name="collision">
          <geometry>
            <box>
              <size>3.0  0.08 2.25</size>
            </box>
          </geometry>
        </collision> -->
        <visual name="visual">
          <geometry>
            <box>
              <size>3.0 0.08 2.25</size>
            </box>
          </geometry>
        </visual>
      </link>

      <joint name="door_joint" type="prismatic">
        <parent>link</parent>
        <child>door</child>
        <axis>
          <xyz>12 0 0</xyz>
          <limit>
            <lower>0</lower>
            <upper>12</upper>
            <effort>20</effort>
          </limit>

          <dynamics>
            <damping>2</damping>
          </dynamics>
        </axis>
      </joint>

      <joint name="lift" type="prismatic">
        <parent>world</parent>
        <child>link</child>
        <axis>
          <xyz>0 0 1</xyz>
          <limit>
            <lower>0</lower>
            <upper>12</upper>
            <effort>100000</effort>
          </limit>

          <dynamics>
            <damping>50</damping>
          </dynamics>
        </axis>
        <physics>
          <ode>
            <implicit_spring_damper>1</implicit_spring_damper>
          </ode>
        </physics>
      </joint>

      <!-- Plugin to control the elevator -->
      <plugin filename="libgazebo_ros_elevator.so" name="elevator_plugin">
        <lift_joint>elevator::lift</lift_joint>
        <door_joint>elevator::door_joint</door_joint>
        <floor_height>5.95</floor_height>

        <!-- Time the elevator door will stay open in seconds -->
        <door_wait_time>10</door_wait_time>

        <!-- This topic is used to control the elevator -->
        <topic>~/elevator</topic>
      </plugin>
    </model>


  </world>
</sdf>